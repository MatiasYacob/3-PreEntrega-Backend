    .product-title {
      font-size: 1.2em;
      font-weight: bold;
      color: #007bff;
    }

    .product-info {
      margin-top: 10px;
      font-size: 0.9em;
      color: #495057;
    }

    .product-quantity {
      margin-top: 10px;
